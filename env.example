# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# CSRF Trusted Origins (for HTTPS in production)
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Database Settings
DATABASE_URL=postgresql://username:password@localhost:5432/dbname

# Email Settings (for production)
EMAIL_HOST=smtp.yourhost.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@yourdomain.com
EMAIL_HOST_PASSWORD=your-email-password

# Cloudflare R2 Storage (optional - for media and static files)
USE_R2_STORAGE=False
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=your-bucket-name
R2_ENDPOINT_URL=https://your-account-id.r2.cloudflarestorage.com
R2_CUSTOM_DOMAIN=your-custom-domain.com
R2_REGION_NAME=auto

# Use R2 for static files too (optional)
USE_R2_FOR_STATIC=False
